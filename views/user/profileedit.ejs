<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Profile</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background: rgb(44, 43, 44);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 120vh;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .container {
           
            max-width: 60%;
            animation: fadeIn 1s ease-in-out forwards;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-50%);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .form-control {
            border-radius: 20px;
        }

        .profile-button {
            background: #000000;
            color: #fff;
            border-radius: 20px;
            transition: background 0.3s ease;
        }

        .profile-button:hover {
            background: #313030;
        }

        .profile-info {
            background-color: #fff;
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

        .profile-info:hover {
            transform: scale(1.02);
        }

        .profile-image {
            border-radius: 50%;
            width: 120px;
            height: 120px;
            object-fit: cover;
            border: 5px solid #ffffff;
            transition: border-color 0.3s ease;
        }

        .profile-image:hover {
            border-color: #000000;
        }

        .change-profile {
            color: #000000;
            font-size: 14px;
            cursor: pointer;
            transition: color 0.3s ease;
        }

        .change-profile:hover {
            color: #010101;
        }
     

        .col-md-3.border-right .btn-block {
            margin-bottom: 10px;
            border-radius: 20px;
            transition: background-color 0.3s ease;
        }

        .col-md-3.border-right .btn-block:hover {
            background-color: #000000;
            color: white;
        }

        .animated-button {
            display: inline-block;
            position: relative;
            padding: 10px 20px;
            margin: 20px 0;
            background-color: #050505;
            color: #fff;
            border: none;
            border-radius: 20px;
            overflow: hidden;
            z-index: 0;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .animated-button::before {
            content: "";
            position: absolute;
            top: 50%;
            left: 50%;
            width: 300%;
            height: 300%;
            background-color: #fff;
            border-radius: 50%;
            z-index: 0;
            transition: all 0.5s ease;
            transform: translate(-50%, -50%);
        }


        .animated-button:hover::before {
            width: 0;
            height: 0;
        }

        .animated-button span {
            position: relative;
            z-index: 1;
        }

        .mt-3 button {
            background-color: rgb(31, 33, 33);
        }
        .col-12 {
        margin-top: 5px;
      }
      .custom-col-lg-8 {
        position: relative;
        height: 100px;
        padding-top: 100px;
        border-radius: 20px;
      }
      .custom-address-list {
        margin-top: 20px;
      }

      .custom-address-list h4 {
        font-size: 18px;
        margin-bottom: 10px;
      }

      .custom-list-group {
        list-style: none;
        padding: 0;
      }

      .custom-list-group-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px;
        background-color: #f7f7f7;
        border: 1px solid #ddd;
        margin-bottom: 10px;
        border-radius: 8px;
        margin-top: 7px;
      }

      .custom-address-buttons button {
        margin-left: 10px;
      }
      .custom-list-group::-webkit-scrollbar {
    width: 0;
    background: transparent;
  }
    
    </style>
</head>

<body>
    <div class="container rounded bg-white mt-5 mb-5 profile-info">
        <!-- Profile Info Section -->
        <div class="row">
            <!-- Profile Image and Details Column -->
            <div class="col-md-3 border-right">
                <!-- Profile Image and Details Content -->
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                    <!-- Profile Image Container -->
                    <div class="profile-image-container">
                        <img id="profile-image" class="rounded-circle mt-5 profile-image" src="/img/logo.png"
                            alt="User Profile Image" />
                        <div class="change-profile" onclick="document.getElementById('profile-pic-upload').click();">
                            Change Profile Picture
                        </div>
                        <input type="file" id="profile-pic-upload" style="display: none"
                            onchange="changeProfilePicture(event);" />
                    </div>
                    <!-- Profile Details -->
                    <div class="profile-details">
                        <span class="font-weight-bold" id="firstName"><%= user.firstname %></span>
                        <span class="text-black-50">
                            <%= user.email %>
                        </span>
                    </div>
                    <br />

                    <!-- Buttons for Edit Profile, Address, and Order -->
                    <div class="mt-3">
                        <button class="btn btn-secondary btn-block mb-2" type="button">Edit Profile</button>
                        <br />
                        <a href="/addAddress">
                            <button class="btn btn-secondary btn-block mb-2" type="button">Address</button>
                        </a>
                        <br />

                        <a href="/orderhistory"><button class="btn btn-secondary btn-block" type="button">Order</button></a>
                        <br />

                        <a href="/changepass"><button class="btn btn-secondary btn-block" type="button">change password</button></a>
                    </div>
                </div>
            </div>
            <!-- User Profile Details Column -->
            <div class="col-md-9">
                <!-- Profile Input Fields -->
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">User Profile</h4>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6">
                            <label class="labels">Name</label><input type="text" id="firstname" class="form-control" 
                                placeholder="First Name" value="<%= user.firstname %>" />
                            <div id="firstnameError" class="text-danger"></div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="labels">Mobile Number</label>
                                <input type="number" id="mobileNumber" class="form-control" placeholder="Enter Phone Number" value="<%= user.mobileNumber %>" />
                                <div id="mobileNumberError" class="text-danger"></div>
                            </div>
                            
                            <div class="col-md-6">
                                <label class="labels">Email</label>
                                <input type="text" id="email" class="form-control" placeholder="Enter Email"
                                    value="<%= user.email %>" readonly>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <% if (user && user.addresses && user.addresses.length> 0) { %>
                                <% user.addresses.forEach((address, index)=> { %>
                                    <div class="col-md-12">
                                        <label class="labels">Address <%= index + 1 %></label>
                                        
                                        <li class="custom-list-group-item">
                                            <span><%= address.addressType %>, <%= address.houseName %>,<%= address.country %>,"<%= address.mobileNumber %>,<%= address.pincode %>,<%= address.flat %>,<%= address.district %>,<%= address.state %></span>
                                           
                                          </li>
                                    </div>
                                    <% }); %>
                                        <% } else { %>
                                            <div class="col-md-12">
                                                <label class="labels">Address</label>
                                                <p>No Address</p>
                                            </div>
                                            <% } %>
                        </div>


                        <div class="mt-5 text-center">
                            <button class="btn btn-primary profile-button" type="button" onclick="saveProfile()">Save
                                Profile</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
     function saveProfile() {
    // Get the values from the input fields
    var firstname = document.getElementById("firstname").value.trim();
    var mobileNumber = document.getElementById("mobileNumber").value.trim();
    var email = document.getElementById("email").value;

    // Reset error messages
    document.getElementById("firstnameError").innerHTML = "";
    document.getElementById("mobileNumberError").innerHTML = "";

    // Validate the inputs
    if (firstname === "") {
        document.getElementById("firstnameError").innerHTML = "First Name cannot be empty";
        return;
    }

    // Validate mobile number format
    if (!/^\d{10}$/.test(mobileNumber)) {
        document.getElementById("mobileNumberError").innerHTML = "Mobile Number must be a 10-digit number";
        return;
    }

    // Prepare the data to be sent
    var data = {
        firstname: firstname,
        mobileNumber: mobileNumber,
        email: email,
        addresses: [],
    };

    // Make a Fetch API request to the server to save the data
    fetch("/updateProfile/<%= user._id %>", {
        method: "POST",
        headers: {
            "Content-Type": "application/json",
        },
        body: JSON.stringify(data),
    })
        .then((response) => response.json())
        .then((response) => {
            // Handle the success response, e.g., show a success message
            console.log("Profile updated successfully:", response);
            // Redirect to the profile page
            window.location.href = "/profile";
        })
        .catch((error) => {
            // Handle the error response, e.g., show an error message
            console.error("Error updating profile:", error);
        });
}

    
        function changeProfilePicture(event) {
            const reader = new FileReader();
            reader.onload = function () {
                const output = document.getElementById("profile-image");
                output.src = reader.result;
            };
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
    <script>
    function confirmDelete(addressId) {
        if (confirm("Are you sure you want to delete this address?")) {
            // Make an AJAX request to the server to delete the address
            fetch(`/deleteAddress/${addressId}`, {
                method: 'POST',
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Optionally, update the UI or reload the page after successful deletion
                    window.location.reload();
                } else {
                    alert('Failed to delete address. Please try again.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
            });
        }
    }

    function redirectToEdit(addressId) {
        // Assuming '/editAddress' is the route for the EditAddress page
        window.location.href = '/editAddress/' + addressId;
    }
</script>

</body>
