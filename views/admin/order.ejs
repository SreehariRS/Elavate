        <h1>Order History</h1>
        <table id="orderTable">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>User ID</th>
                    <th>Address</th>
                    <th>Date & Time</th>
                    <th>Product Name</th>
                    <th>Total Price</th>
                    <th>Status</th>
                    <th>Payment Method</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
               <% for (const userId in ordersByUser) { %>
    <% ordersByUser[userId].forEach(order => { %>
        <% order.items.forEach(item => { %>
            <tr class="order-row">
                <td><%= String(order._id).slice(-4) %></td>
                <td><%= order.userId._id %></td> <!-- Changed from order.userId to order.userId._id -->
                <td><%= order.selectedAddress %></td>
                <td><%= order.date.toLocaleString() %></td>
                <td><%= item.productId ? item.productId.name : 'N/A' %></td>
                <td><%= order.totalPrice %></td>
                <td>
                    <% if (item.productId && item.productId.name !== 'N/A') { %>
                        <div class="status-controls">
                            <% if (order.status === 'cancelled' || order.status === 'returned' || order.status === 'refunded') { %>
                                <a href="#" onclick="showCancellationReason('<%= order.cancellationReason %>')"><%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %></a>
                            <% } else if (order.status === 'return-requested' || order.status === 'refund-requested' || order.status === 'cancellation-requested') { %>
                                <span><%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %></span>
                                <button onclick="approveRequest('<%= order._id %>', 'return')" class="btn btn-sm btn-success <%= order.status !== 'return-requested' ? 'd-none' : '' %>">Approve Return</button>
                                <button onclick="approveRequest('<%= order._id %>', 'refund')" class="btn btn-sm btn-success <%= order.status !== 'refund-requested' ? 'd-none' : '' %>">Approve Refund</button>
                                <button onclick="approveRequest('<%= order._id %>', 'cancellation')" class="btn btn-sm btn-success <%= order.status !== 'cancellation-requested' ? 'd-none' : '' %>">Approve Cancellation</button>
                            <% } else { %>
                                <select id="orderStatusDropdown_<%= order._id %>" onchange="updateOrderStatus('<%= order._id %>')">
                                    <option value="confirmed" <%= order.status === 'confirmed' ? 'selected' : '' %>>Confirmed</option>
                                    <option value="dispatched" <%= order.status === 'dispatched' ? 'selected' : '' %>>Dispatched</option>
                                    <option value="out for delivery" <%= order.status === 'out for delivery' ? 'selected' : '' %>>Out for Delivery</option>
                                    <option value="delivered" <%= order.status === 'delivered' ? 'selected' : '' %>>Delivered</option>
                                    <option value="paymentfailed" <%= order.status === 'paymentfailed' ? 'selected' : '' %>>Payment Failed</option>
                                </select>
                            <% } %>
                        </div>
                    <% } %>
                </td>
                <td><%= order.paymentMethod %></td>
                <td>
                    <% if (order.cancellationReason) { %>
                        <a href="#" onclick="showCancellationReason('<%= order.cancellationReason %>')">View Reason</a>
                    <% } %>
                </td>
            </tr>
        <% }); %>
    <% }); %>
<% } %>
