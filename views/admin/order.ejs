    <script>
        $(document).ready(function () {
            $('#orderTable').DataTable({
                "paging": true,
                "ordering": true,
                "info": true,
                "searching": true
            });
        });

        function updateOrderStatus(orderId) {
            const newStatus = document.getElementById("orderStatusDropdown_" + orderId).value;
            fetch('/admin/updateorder', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    orderId: orderId,
                    newStatus: newStatus,
                }),
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Status Updated',
                        text: 'Order status updated successfully!',
                        timer: 2000,
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Update Failed',
                        text: 'Failed to update order status.',
                    });
                }
            })
            .catch(error => {
                console.error(error);
                Swal.fire({
                    icon: 'error',
                    title: 'Update Failed',
                    text: 'An error occurred while updating the status.',
                });
            });
        }

        function approveRequest(orderId, requestType) {
            Swal.fire({
                title: `Approve ${requestType.charAt(0).toUpperCase() + requestType.slice(1)}?`,
                text: `Are you sure you want to approve the ${requestType} for order ${orderId.slice(-4)}?`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: `Yes, approve ${requestType}`
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch('/admin/approve-request', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            orderId: orderId,
                            requestType: requestType,
                        }),
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                icon: 'success',
                                title: `${requestType.charAt(0).toUpperCase() + requestType.slice(1)} Approved`,
                                text: data.message,
                                timer: 2000,
                            }).then(() => {
                                window.location.reload();
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Approval Failed',
                                text: data.message,
                            });
                        }
                    })
                    .catch(error => {
                        console.error(error);
                        Swal.fire({
                            icon: 'error',
                            title: 'Approval Failed',
                            text: 'An error occurred while approving the request.',
                        });
                    });
                }
            });
        }

        function showCancellationReason(reason) {
            Swal.fire({
                title: 'Reason',
                text: reason,
                icon: 'info',
            });
        }

        function searchOrders() {
            var searchInput = document.getElementById("searchInput").value.toLowerCase();
            var orderRows = document.querySelectorAll('.order-row');
            var found = false;
            
            orderRows.forEach(function(row) {
                var orderId = row.querySelector('td:nth-child(1)').textContent.toLowerCase();
                var userId = row.querySelector('td:nth-child(2)').textContent.toLowerCase();
                var address = row.querySelector('td:nth-child(3)').textContent.toLowerCase();
                
                if (orderId.includes(searchInput) || userId.includes(searchInput) || address.includes(searchInput)) {
                    row.style.display = "table-row";
                    found = true;
                } else {
                    row.style.display = "none";
                }
            });

            if (!found) {
                Swal.fire({
                    title: 'No Results Found',
                    text: 'No orders match the search criteria.',
                    icon: 'info',
                });
            }
        }

        document.addEventListener("DOMContentLoaded", function () {
            const filterButton = document.getElementById('filterPrice');
            filterButton.addEventListener('click', function () {
                filterOrdersByPrice();
            });
        });

        function filterOrdersByPrice() {
            const minPrice = parseFloat(document.getElementById('minPrice').value);
            const maxPrice = parseFloat(document.getElementById('maxPrice').value);

            const orderRows = document.querySelectorAll('.order-row');
            orderRows.forEach(function (row) {
                const totalPrice = parseFloat(row.querySelector('td:nth-child(6)').textContent);
                if (totalPrice >= minPrice && totalPrice <= maxPrice) {
                    row.style.display = 'table-row';
                } else {
                    row.style.display = 'none';
                }
            });
        }
    </script>
