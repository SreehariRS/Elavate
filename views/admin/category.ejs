                        <% } %>
                        <% for (let i = 1; i <= totalPages; i++) { %>
                            <a href="/admin/category?page=<%= i %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a>
                        <% } %>
                        <% if (currentPage < totalPages) { %>
                            <a href="/admin/category?page=<%= currentPage + 1 %>">Next</a>
                        <% } else { %>
                            <a href="#" class="disabled">Next</a>
