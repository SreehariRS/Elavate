    <table id="orderTable">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>User ID</th>
                <th>Address</th>
                <th>Date & Time</th>
                <!-- <th>Product Details ID</th> -->
                <th>product name</th>
                <th>Total Price</th>
                <th>Status</th>
                <th>Payment Method</th>
            </tr>
        </thead>
        <tbody>
            <!-- Sample order data -->
            <% for (const userId in ordersByUser) { %>
              <% ordersByUser[userId].forEach(order => { %>
                  <!-- Render individual order rows here -->
                  <% order.items.forEach(item => { %>
                      <tr class="order-row">
                          <td><%= String(order._id).slice(-4) %></td>
                          <td><%= order.userId %></td>
                          <td><%= order.selectedAddress %></td>
                          <td><%= order.date.toLocaleString() %></td>
                          <td><%= item.productId.name %></td> <!-- Display product name -->
                          <td><%= order.totalprice %></td>
                          <td>
                              <div class="cancel-order-btn">
                                  <!-- Check order status and display accordingly -->
                                  <% if (order.status === 'cancelled' || order.status === 'returned') { %>
                                      <!-- Display the cancellation reason as a link -->
                                      <a href="#" onclick="showCancellationReason('<%= order.cancellationReason %>')"><%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %></a>
                                  <% } else { %>
                                      <!-- Display dropdown for non-cancelled and non-returned orders -->
                                      <select id="orderStatusDropdown_<%= order._id %>" onchange="updateOrderStatus('<%= order._id %>')">
                                          <option value="confirmed" <%= order.status === 'confirmed' ? 'selected' : '' %>>Confirmed</option>
                                          <option value="dispatched" <%= order.status === 'dispatched' ? 'selected' : '' %>>Dispatched</option>
                                          <option value="outfordelivery" <%= order.status === 'outfordelivery' ? 'selected' : '' %>>Out For Delivery</option>
                                          <option value="delivered" <%= order.status === 'delivered' ? 'selected' : '' %>>Delivered</option>
                                          <!-- Add other status options if needed -->
                                      </select>
                                  <% } %>
                              </div>
                          </td>
                          <td><%= order.paymentMethod %></td>
                      </tr>
                  <% }); %>
              <% }); %>
          <% } %>
          
        </tbody>
       
    </table>

    
