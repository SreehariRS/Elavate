    </main>


<script>
    // Sample data for the charts
    const monthlyData = [12000, 15000, 18000, 22000, 25000];
    const yearlyData = [150000, 180000, 200000, 250000, 300000];

    // Get chart elements
    const monthlyChart = document.getElementById('monthlyChart').getContext('2d');
    const yearlyChart = document.getElementById('yearlyChart').getContext('2d');

    // Function to create a line chart
    const createLineChart = (context, data, label, color) => {
        new Chart(context, {
            type: 'line',
            data: {
                labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4', 'Week 5'],
                datasets: [{
                    label: label,
                    data: data,
                    backgroundColor: color,
                    borderColor: color,
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    legend: {
                        labels: {
                            color: 'black' // Set legend text color to white
                        }
                    }
                },
                scales: {
                    x: {
                        ticks: {
                            color: 'black' // Set x-axis label text color to white
                        },
                        grid: {
                            color: 'white' // Set color of x-axis grid lines to white
                        }
                    },
                    y: {
                        ticks: {
                            color: 'white' // Set y-axis label text color to white
                        },
                        grid: {
                            color: 'white' // Set color of y-axis grid lines to white
                        }
                    }
                }
            }
        });
    };

    createLineChart(monthlyChart, monthlyData, 'Monthly Sales', 'rgba(0, 123, 255, 1)');
    createLineChart(yearlyChart, yearlyData, 'Yearly Sales', 'rgba(40, 167, 69, 1)');
</script>


