        <form id="checkoutForm">
            <div class="addresses-section">
                <h3>Select Delivery Address</h3>
                <select class="form-control" id="address" name="address">
                    <% addresses.forEach(address => { %>
                        <option>
                            <%= address.addressType %> -
                            <%= address.district %>,
                            <%= address.state %>,
                            <%= address.flat %>,
                            <%= address.pincode %>,
                            <%= address.country %> -,
                            
