        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            document.getElementById("addToCartBtn").addEventListener("click", function () {
                const productId = "<%= products._id %>"; // Assuming products._id is the product ID
                console.log(productId);
                const quantity = document.getElementById("quantityInput").value;
                const stock = "<%= products.stock %>";
                console.log(stock); // Assuming products.stock is the product stock
                const maxQuantity = "<%= products.stock %>"; // Assuming maxQuantity represents the maximum available quantity

                if (stock <= 0) {
                    // Show a SweetAlert indicating that the product is out of stock
                    Swal.fire({
                        title: "Out of Stock",
                        text: "This product is currently out of stock.",
                        icon: "error",
                    });
                } else if (quantity > maxQuantity) {
                    // Show a SweetAlert indicating that the maximum quantity has been reached
                    Swal.fire({
                        title: "Maximum Quantity Reached",
                        text: "You cannot add more of this product to your cart.",
                        icon: "warning",
                    });
                } else {
                    const userId = this.getAttribute("dataa-user-id");
                    // Add logic to navigate to the cart page with the product ID, quantity, and user ID
                    window.location.href = `/cart?productId=${productId}&quantity=${quantity}&userId=${userId}`;
                }
            });

            // Get the product image element
            const productImage = document.getElementById("productImage");

            // Add event listeners for mouse enter and leave events
            productImage.addEventListener("mouseenter", () => {
                // Add the 'zoomed' class when the mouse enters the image
                productImage.classList.add("zoomed");
            });

            productImage.addEventListener("mouseleave", () => {
                // Remove the 'zoomed' class when the mouse leaves the image
                productImage.classList.remove("zoomed");
            });

            // Calculate the zoomed area based on the mouse position
            productImage.addEventListener("mousemove", (event) => {
                const { offsetX, offsetY, target } = event;
                const { offsetWidth: width, offsetHeight: height } = target;
                const xPos = (offsetX / width) * 100;
                const yPos = (offsetY / height) * 100;

                // Update the transform origin to zoom at the mouse position
                productImage.style.transformOrigin = `${xPos}% ${yPos}%`;
            });
        </script>
